<h1>Rotten Mangoes</h1>
<%= link_to "Submit a movie!", new_movie_path %>

<%= form_tag(movies_search_path, method: "get") do %>
  <%= label_tag(:title, "Title:") %>
  <%= text_field_tag(:title) %>
  <%= label_tag(:director, "Director:") %>
  <%= text_field_tag(:director) %>
  <%= label_tag(:runtime_in_minutes, "Runtime:") %>
  <%= select_tag(:runtime_in_minutes, options_for_select([['', ''], ['Under 90 minutes', 1], ['Between 90 and 120 minutes', 2],['Over 120 minutes', 3]])) %>
  <%= submit_tag("Search") %>
<% end %>

<hr>

<% @movies.each do |movie| %>
  <% if movie.poster_image && movie.poster_image.url %>
  <%= link_to image_tag(movie.poster_image.thumb.url), movie_path(movie) %>
  <% end %>
  <h2><%= link_to movie.title, movie_path(movie) %></h2>
  <h3><%= movie.release_date %></h3>
  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
  <p><%= movie.description %></p>
  <hr>
<% end %>