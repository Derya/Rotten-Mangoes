<%= link_to "Back to all users", admin_users_path %>

<h2>Enter new user details</h2>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div>
      <%= pluralize(@user.errors.count, "error") %> prevented this user from being submitted:
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>
  <div>
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname %>
  </div>
  <div>
    <%= f.label :lastname %><br>
    <%= f.text_field :lastname %>
  </div>
  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :admin %><br>
    <%= f.text_field :admin %>
  </div>
  <div>
    <%= f.submit "Submit" %> 
  </div>
<% end %>