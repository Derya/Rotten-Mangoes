<footer>
  <small>
    <% if current_user %>
      Signed in as <%= current_user.full_name %>.
      <% unless shadow_user %>
        (<%= link_to "Log out", sessions_path("current"), method: :delete %>)
      <% else %>
        Shadowing from account <%= shadow_user.full_name %> (<%= link_to "Exit shadow mode", admin_shadow_sessions_path("current"), method: :delete %>)
      <% end %>
      <% if current_user.admin %>
        <%= link_to "Admin", admin_users_path %>
      <% end %>
    <% else %>
      <%= link_to "Log In", new_sessions_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
  </small>
</footer>